<div class="main-container">
  <div id="list">
    <h5><%= link_to videos_path do %>
     <i class="fas fa-home"></i> Home
     <%end %></h5>

     <h3> filters</h3>

  </div>

  <div class="video-container">
    <div class="row" id="video-index">
      <% @videos.each do |video|  %>
      <div class="col-xs-12 col-sm-4 col-md-2">
        <%= link_to video_path(video) do %>
        <div class="card" style="width: 210px;">
          <img class="card-img-top" src="https://img.youtube.com/vi/<%= video.url %>/hqdefault.jpg" alt="Card image cap">
          <div class="card-body">
            <h5><%= video.title %></h5>
            <p><%= video.region %> </p>
            <p> <%= video.created_at %></p>
            <p> <%= video.rating %></p>
          </div>
        </div>
        <%end %>
      </div>
      <%end %>
    </div>
  </div>
</div>
